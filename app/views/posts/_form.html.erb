<div class="row error">
  <div class="small-12 text-center columns">
      <div class="alert-box alert"><%= error_msg(@post) %></div>
  </div>
</div>
<h3>New Post for <%= @topic.title %></h3>
<%= form_for [@topic, @post], :html => {:multipart => true} do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.file_field :image %>
<%= f.hidden_field :image_cache %>
<%= f.submit 'Save' %>
<% end %>
