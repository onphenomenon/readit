<div  class="row" id="<%= dom_id(@post) %>">
    <div class="small-6 columns">
      	<h2><%= @post.title %></h2>
      	<td><%= @post.description %></td>
    </div>
  <br class="clear" />
</div>
<h3>Add Comment</h3>
<%= render 'comments/form', post: @post %>
<% @post.comments.each do |comment| %>
  <div><%= comment.description %><%= link_to "delete comment", comment, method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
