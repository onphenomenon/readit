<div class="row error">
  <div class="small-12 text-center columns">
      <div class="alert-box alert round" ><%= error_msg(@topic) %></div>
  </div>
</div>
<%= form_for @topic do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit 'Save' %>
<% end %>

