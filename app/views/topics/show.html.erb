<div  class="row" id="<%= dom_id(@topic) %>">
    <div class="small-6 columns">
      	<h2><%= @topic.title %></h2>
      	<td><%= @topic.description %></td>
    </div>
    <div class="small-6 columns">
    	<% @posts.each do |post| %>
        <h3><%= "#{post.title} (#{post.created_at})" %></h3>
        <h4><%= post.description %></h4>

          <% end %>
      </div>
  <br class="clear" />
</div>
