<div class="row show-topics">
  <div class="small-10 columns small-centered">
    <section class="row">
      <div class="small-3 columns">
        	<h2><%= @topic.title %></h2>
          <%= crud_links(@topic) %>
      </div>
      <div class="small-6 columns">
        	<h4><%= @topic.description %></h4>
          <%= image_tag @topic.image_url.to_s %>
      </div>
      <div class="small-3 columns">
          <h5><%= new_post(@topic) %><%= topic_index(@topic) %></h5>
      </div>
    </section>


      	<% @posts.each do |post| %>
        <section class="row post-list">
          <div class="small-6 columns">

            <h3><%= post.rank.to_i %>&nbsp<%= link_to post.title, topic_post_path(@topic, post) %></h3>
            <h5><%= post.created_at.strftime("%d %b. %Y") %><%= vote_link(post) %></h5><%= image_tag post.image_url.to_s %><%= crud_post(post) %>
          </div>
          <div class="small-6 columns">

            <h4><%= shorten(post.description) %></h4>
          </div>
        </section>
            <% end %>
        <%= will_paginate @posts %>

  </div>
  <br class="clear" />

</div>
